{
  "name": "Tru URL Extension",
  "version": "0.0.1",
  "description": "Programmatically parse URLs",
  "browser_action": {
    "default_icon": "images/icon-128.png"
  },
  "background": {
    "scripts": ["js/punycode.js", "js/background.js"]
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["js/punycode.js", "js/content.js"]
  }],
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "manifest_version": 2,
  "icons": {
  	"16": "images/icon-16.png",
    "48": "images/icon-48.png",
  	"128": "images/icon-128.png"
  }
}
